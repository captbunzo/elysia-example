{
    "name": "elysia-example",
    "description": "Elysia Example Project",
    "author": "Paul Thompson <captbunzo@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/captbunzo/elysia-example#readme",
    "bugs": "https://github.com/captbunzo/elysia-example/issues",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/captbunzo/elysia-example.git"
    },
    "scripts": {
        "build": "bun run clean && bun run build:module && bun run build:server",
        "build:module": "tsdown --outDir dist/lib",
        "build:server": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/run/server src/index.ts",
        "clean": "rm -rf dist",
        "cloc": "cloc --config ./.cloc/config.txt",
        "dev": "NODE_ENV=development bun run --watch src/index.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint --max-warnings 0 --fix",
        "lint:check": "eslint --max-warnings 0",
        "start": "bun run src/index.ts"
    },
    "type": "module",
    "module": "src/index.ts",
    "dependencies": {
        "@elysiajs/openapi": "^1.4.11",
        "debug": "^4.4.3",
        "elysia": "^1.4.16"
    },
    "devDependencies": {
        "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
        "@eslint/js": "^9.39.1",
        "@types/bun": "latest",
        "@types/debug": "^4.1.12",
        "@types/node": "^24.10.1",
        "cloc": "^2.6.0-cloc",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-unicorn": "^62.0.0",
        "globals": "^16.5.0",
        "prettier": "^3.6.2",
        "tsdown": "^0.16.4",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.4"
    },
    "exports": {
        ".": {
            "types": "./dist/lib/index.d.ts",
            "import": "./dist/lib/index.js"
        },
        "./v1/users": {
            "import": "./dist/lib/v1/users.js",
            "types": "./dist/lib/v1/users.d.ts"
        }
    }
}
